@* ﻿@model IEnumerable<Category> *@
@{
    ViewData["Title"] = "Index";
}

<h1>Categories List</h1>
<table class="table table-striped table-bordered">
      <thead>
          <tr>
              <th>#</th>
             <th>Category Name</th>
             <th>Describtion</th>
          </tr>
      </thead>
      <tbody>

        @foreach (var item in Model)
        {

          <tr>
               <td>@item.Id</td>
               <td>@item.Name</td>
               <td>@item.Description</td>
          </tr>
        }
      </tbody>

</table>